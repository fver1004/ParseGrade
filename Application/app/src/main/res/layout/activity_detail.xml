<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#005B47"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.fver1004.parsinggrade.MainActivity">

<LinearLayout
    android:orientation="vertical"
    android:background="#004a36"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:text="세부 설정"
            android:background="#005B47"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <RelativeLayout
            android:id="@+id/menu_title"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="3px">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="- 시작을 누르면 성적공시 확인을 시작합니다\n- 공시가 되면 알림메세지가 옵니다.\n- 이후 알림메세지나 어플을 재접속할 경우 성적을 확인할 수 \n  있습니다."
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" />
                </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="3px"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:id="@+id/menu0"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:id="@+id/linear_left"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/state0"
                        android:text=""
                        android:textSize="30sp"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="16sp"
                        android:text=" 년"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="1px"
                android:layout_weight="1"
                android:id="@+id/menu1"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >
                <LinearLayout
                    android:id="@+id/hakgiL"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/state1"
                        android:text=""
                        android:textSize="30sp"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    </LinearLayout>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/hakgiL"
                    android:textSize="16sp"
                    android:text="      학기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/menu2"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="3px">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="16sp"
                    android:text=" 알림 메세지 진동/소리 해제"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/state2"
                    android:textSize="13sp"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/menu3"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="3px">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="16sp"
                    android:text=" 갱신 주기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/state3"
                    android:textSize="13sp"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="3px">

            <TextView
                android:textSize="16sp"
                android:gravity="center"
                android:text=" 설정 저장"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Switch
                android:id="@+id/select1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="3px">

            <TextView
                android:textSize="16sp"
                android:gravity="center"
                android:text=" 추가 옵션"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>





    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:background="#005B47"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/buttonToParsing"
            android:text="시작"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</LinearLayout>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:id="@+id/progressBar2" />
</RelativeLayout>
